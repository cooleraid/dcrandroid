<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgcolor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2.1"
        android:background="@color/backgcolorwhite">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receive Funds"
        android:textSize="21sp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Each time you request a payment, create a new address to protect your privacy"
        android:textSize="12sp"
        android:gravity="center"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2.2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Account:"
        android:gravity="bottom"
        android:padding="5dp"
        android:background="@color/backgcolorwhite"
        android:textSize="16sp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@drawable/background_shadow">

    <Spinner
        android:id="@+id/recieve_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/nav_item_activity_titles"

        >
    </Spinner>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:layout_weight="0.8"
        android:background="@color/backgcolorwhite"
        android:orientation="vertical">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/bitm"
        android:layout_gravity="center"
       android:background="@color/backgcolor"
        />
        <TextView
            android:id="@+id/barcode_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonText"
            android:gravity="center"
            android:maxEms="37"
            android:minEms="26"
            android:lines="1"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="this is my codedssddsdaadssdsdsddssddd"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_gen_new_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate New Address"
            android:background="@drawable/btn_shape"
            android:textColor="@color/buttonText"
            android:padding="8dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:clickable="true"/>
    </LinearLayout>





</LinearLayout>