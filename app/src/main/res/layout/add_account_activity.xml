<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="ADD AN ACCOUNT"
        android:gravity="center"
        android:background="@color/backgcolorwhite"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Input your new account name and enter your private passphrase"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@color/backgcolorwhite"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/backgcolorwhite"
        >
        <EditText
            android:id="@+id/add_acc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Account Name"
            android:maxLines="1"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/add_acc_passphrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Private Passphrase"
            android:maxLines="1"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/add_acc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_shape"
            android:padding="5dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

</LinearLayout>