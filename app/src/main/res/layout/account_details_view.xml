<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebefee"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:background="@drawable/background_shadow">
            <TextView
                android:id="@+id/label_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:gravity="center"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Balance"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
            <View
                android:id="@+id/separator123"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/label_balance"
                android:background="@color/primary_text" />

            <TextView
                android:id="@+id/label_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator123"
                android:padding="8dp"
                android:text="Total"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/acc_dts_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:layout_toEndOf="@+id/label_total"
                android:layout_toRightOf="@+id/label_total"
                android:layout_below="@+id/separator123"
                android:padding="8dp"
                android:text="87.9934232 DCR"
                android:textColor="@color/primary_text" />

            <View
                android:id="@+id/separator12"
                android:layout_width="fill_parent"
                android:layout_height="1px"

                android:layout_below="@+id/label_total"
                android:background="@color/primary_text" />

            <TextView
                android:id="@+id/label_spendable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator12"
                android:text="Spendable"
                android:padding="8dp"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/acc_dts_spendable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator12"
                android:layout_toRightOf="@+id/label_spendable"
                android:layout_toEndOf="@+id/label_spendable"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:padding="8dp"
                android:text="87.9934232 DCR"
                android:textColor="@color/primary_text" />

            <View
                android:id="@+id/separator20"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/label_spendable"
                android:background="@color/primary_text" />

            <TextView
                android:id="@+id/label_immature_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator20"
                android:text="Immature Rewards"
                android:padding="8dp"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/acc_dts_immature_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/separator20"
                android:layout_toEndOf="@+id/label_immature_reward"
                android:layout_toRightOf="@+id/label_immature_reward"
                android:text="0.00 DCR"
                android:textColor="@color/primary_text" />


            <View
                android:id="@+id/separator13"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/label_immature_reward"
                android:background="@color/primary_text" />

            <TextView
                android:id="@+id/label_lock_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator13"
                android:padding="8dp"
                android:text="Locked by Tickets"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/acc_dts_locked_bt_tcks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator13"
                android:layout_toEndOf="@+id/label_lock_ticket"
                android:layout_toRightOf="@+id/label_lock_ticket"
                android:text="0.00 DCR"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:textColor="@color/primary_text" />

            <View
                android:id="@+id/separator21"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/label_lock_ticket"
                android:background="@color/primary_text" />

            <TextView
                android:id="@+id/label_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator21"
                android:text="Voting Authority"
                android:padding="8dp"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/acc_dts_voting_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator21"
                android:layout_toEndOf="@+id/label_auth"
                android:layout_toRightOf="@+id/label_auth"
                android:gravity="end"
                android:text="0.00 DCR"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/primary_text" />
            <View
                android:id="@+id/separator17"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/acc_dts_voting_auth"
                android:background="@color/primary_text" />
            <TextView
                android:id="@+id/label_stake_gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Immature Stake Generation"
                android:padding="8dp"
                android:textColor="@color/secondary_text"
                android:layout_below="@+id/separator17"/>



            <TextView
                android:id="@+id/acc_dts_immature_stake_gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/label_stake_gen"
                android:layout_below="@+id/separator17"
                android:gravity="end"
                android:padding="8dp"
                android:text="0.00 DCR"
                android:textColor="@color/primary_text" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:background="@drawable/background_shadow">

            <TextView
                android:id="@+id/label_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Property"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
            <View
                android:id="@+id/separastor1277"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/label_property"
                android:background="@color/primary_text" />

            <TextView
                android:id="@+id/label_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separastor1277"
                android:padding="8dp"
                android:text="Account Number"
                android:textColor="@color/secondary_text" />
            <TextView
                android:id="@+id/acc_dts_acc_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/label_account_number"
                android:layout_toEndOf="@+id/label_account_number"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/separastor1277"
                android:padding="8dp"
                android:gravity="end"
                android:text="0"
                android:textColor="@color/primary_text" />

            <View
                android:id="@+id/separastor12"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/label_account_number"
                android:background="@color/primary_text" />
            <TextView
                android:id="@+id/label_hd_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separastor12"
                android:text="HD Path"
                android:padding="8dp"
                android:textColor="@color/secondary_text" />
            <TextView
                android:id="@+id/acc_dts_hd_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separastor12"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/label_hd_path"
                android:layout_toRightOf="@+id/label_hd_path"
                android:gravity="end"
                android:text="m / 44 /11 / 0"
                android:padding="8dp"
                android:textColor="@color/primary_text" />
            <View
                android:id="@+id/separators12s"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/label_hd_path"
                android:background="@color/primary_text" />
            <TextView
                android:id="@+id/label_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separators12s"
                android:text="Keys"
                android:padding="8dp"
                android:textColor="@color/secondary_text" />
            <TextView
                android:id="@+id/acc_dts_keys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separators12s"
                android:layout_toRightOf="@+id/label_key"
                android:layout_toEndOf="@+id/label_key"
                android:gravity="end"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="20 external,20 internal,0 imported "
                android:textColor="@color/primary_text" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>